#include <iostream>
#include <string>
using namespace std;

int main(){

int len,n;
string s;
cin>>s;
len=s.length();
n=len-2;
for(int i=0;i<len;i++){
	s.at(i)=toupper(s.at(i));}
cout<<s<<endl;
for(int k=1;k<len-1;k++){
		cout<<s.at(k);
		for(int i=0;i<len-2;i++){
			cout<<" ";}
		cout<<s.at(n);
		n--;
		cout<<endl;}
for(int i=len-1;i>=0;i--){
	cout<<s.at(i);}
cout<<endl;
}
