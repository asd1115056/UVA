#include <iostream>

using namespace std;

int main(){

int n,s,z=1;

cin>>n;
s=n-2;

for(int k=0;k<n-1;k++){
	for(int d=s;d>=0;d--){
		cout<<" ";}
	cout<<"*";
	s--;
	if(k>0){
		for(int g=0;g<z;g++){
			cout<<" ";}}
	if(k>0) {cout<<"*";z=z+2;}
	cout<<endl;

}
for(int i=0;i<2*n-1;i++){
	cout<<"*";}
cout<<endl;
}
